@{
    ViewData["Title"] = "Dashboard";
}

<h2>Wedding Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card p-3 shadow-sm mb-3">
            <h4>Total Weddings</h4>
            <p>@ViewBag.TotalWeddings</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-3 shadow-sm mb-3">
            <h4>Total Guests</h4>
            <p>@ViewBag.TotalGuests</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-3 shadow-sm mb-3">
            <h4>Task Completion</h4>
            <p>@ViewBag.TaskCompletion% complete</p>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-3 shadow-sm mb-3">
            <h4>Total Estimated Budget</h4>
            <p>$@ViewBag.BudgetTotal</p>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-3 shadow-sm mb-3">
            <h4>Total Spent</h4>
            <p>$@ViewBag.ActualSpent</p>
        </div>
    </div>
</div>
